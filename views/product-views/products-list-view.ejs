<h2> Products List </h2>

<ul>
  <% productsAndStuff.forEach((product) => { %>
    <li>
      <h3> <%= product.name %> </h3>
      <p> $<%= product.price %> </p>

      <a href="/products/<%= product._id %>">
        View details
      </a>
      <br>

      <a href="/products/<%= product._id %>/edit">
        Edit Product
      </a>
      <br>

      <!-- If we want to add 'delete' as a link instead of a button -->
      <!-- <a href="/products/<%= product._id %>/delete">
        Delete Product
      </a>
      <br> -->

      <form action="/products/<%= product._id %>/delete"
            method="post">
            <button> Delete </button>
      </form>
    </li>
  <% }) %>
</ul>
